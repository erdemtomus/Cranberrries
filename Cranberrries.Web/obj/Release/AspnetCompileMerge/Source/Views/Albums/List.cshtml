@using Cranberrries.Web.Models
@model List<Album>

@{
    ViewBag.Title = "Tüm Albümler";
}

<h2>Albümler</h2>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Ad</th>
        <th>Yayın Tarihi</th>
        <th>Kapak Foto</th>
        <th>Aksiyon</th>
    </tr>
    </thead>
    <tbody>

    @foreach (Album album in Model)
    {
        <tr>
            <td>@album.Name</td>
            <td>@(album.ReleasedDate.HasValue ? album.ReleasedDate.Value.ToShortDateString() : null )</td>
            <td><img src="@album.AlbumPhotoUrl" /></td>
            <td><a href="/Albums/Duzenle/@album.Id">Düzenle</a></td>
        </tr>
    }
    </tbody>

</table>

<div>
    <a href="/Albums/Ekle" class="btn-warning">Yeni Album</a>
</div>